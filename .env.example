# Environment Variables for MSSQL Docker Deployment
# Copy this to .env and fill in your actual MSSQL server values

# Flask Configuration
SECRET_KEY=your-32-character-secret-key-change-this-in-production
FLASK_ENV=production
FLASK_DEBUG=False

# MSSQL Database Configuration
# Replace with your actual MSSQL server details
DB_SERVER=your-mssql-server-ip-or-hostname
DB_DATABASE=SupportChatbot
DB_USERNAME=chatbot_user
DB_PASSWORD=YourSecurePassword123!
DB_USE_WINDOWS_AUTH=False

# Examples:
# For SQL Server with IP: DB_SERVER=192.168.1.100
# For named instance: DB_SERVER=192.168.1.100\SQLEXPRESS
# For hostname: DB_SERVER=sql-server.yourdomain.com
# For Windows Auth: DB_USE_WINDOWS_AUTH=True

# Upload Configuration
UPLOAD_FOLDER=static/uploads
MAX_CONTENT_LENGTH=16777216

# Admin Credentials
ADMIN_EMAIL=admin@youcloudtech.com
ADMIN_PASSWORD=admin123
ADMIN_ALT_PASSWORD=SecureAdmin123!

# Odoo Integration (Optional)
ODOO_URL=
ODOO_DB=
ODOO_USERNAME=
ODOO_PASSWORD=

# Application Settings
BABEL_DEFAULT_LOCALE=en
BABEL_DEFAULT_TIMEZONE=UTC
API_TITLE=Support Chatbot API
API_VERSION=v1

# Session Configuration
SESSION_TYPE=filesystem

# Database Engine Options
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False
