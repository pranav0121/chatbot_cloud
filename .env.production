# Production Environment Configuration
# Copy this file to .env and update the values for your production environment

# Database Configuration
# For SQL Server on Docker/Linux, use the container name or host IP
DB_SERVER=host.docker.internal
DB_DATABASE=SupportChatbot
DB_USERNAME=chatbot_user
DB_PASSWORD=YourSecurePassword123!
DB_USE_WINDOWS_AUTH=False

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-super-secret-production-key-change-this-immediately

# Odoo Configuration
ODOO_URL=https://your-odoo-instance.odoo.com
ODOO_DB=your-database-name
ODOO_USERNAME=your-odoo-username
ODOO_PASSWORD=your-odoo-password

# Application Settings
SKIP_DB_CHECK=false
PYTHONUNBUFFERED=1

# Security Headers
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
