# Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Database Configuration
# For SQL Server on Windows with Windows Auth:
# DB_SERVER=SERVERNAME\INSTANCENAME
# DB_USE_WINDOWS_AUTH=True

# For SQL Server with username/password:
# DB_SERVER=your-sql-server-host
# DB_USE_WINDOWS_AUTH=False

DB_SERVER=your-database-server
DB_DATABASE=SupportChatbot
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password
DB_USE_WINDOWS_AUTH=false

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=change-this-to-a-random-secret-key

# Odoo Configuration
ODOO_URL=https://your-odoo-instance.odoo.com
ODOO_DB=your-odoo-database-name
ODOO_USERNAME=your-odoo-username
ODOO_PASSWORD=your-odoo-password

# Application Settings
SKIP_DB_CHECK=false
PYTHONUNBUFFERED=1

# Optional: Security Headers for Production
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
